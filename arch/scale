#!/bin/bash

SCALE="1.25"
FONT_DPI="125"

kwriteconfig5 --file "$HOME/.config/kdeglobals" --group "KScreen" --key "ScaleFactor" "$SCALE"
kwriteconfig5 --file "$HOME/.config/kcmfonts" --group "General" --key "forceFontDPI" "$FONT_DPI"

echo "scale set to $SCALE"
echo "font dpi set to $FONT_DPI"

echo -e "\033[0;31mneed to log out"
