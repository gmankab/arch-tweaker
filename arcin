#!/bin/bash

echo 'Using gmanka profile for archinstall'
echo 'Root password will be set to "1"'
echo 'Connected disks:'
echo ''
lsblk -io KNAME,TYPE,SIZE,MODEL
echo ''
echo 'WARNING: /dev/sda will FULLY WIPED'
echo 'Press enter to continue and FULLY WIPE /dev/sda'

read -p ''

pacman -Syu archinstall archlinux-keyring

